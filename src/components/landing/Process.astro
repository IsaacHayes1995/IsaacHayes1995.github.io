---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Array
const processs = [
  {
    aosDuration: "2000",
    title: "Strategy",
    description:
      "In this process, we define how your organization wants to be perceived by consumers. What sets it apart? What impression should your product or service leave? This serves as the foundation of your brand.",
  },
  {
    aosDuration: "2500",
    title: "Execution",
    description:
      "Using research insights, we explore strategic design solutions. Various concepts will be presented, with the chosen direction refined further. This includes low, mid, and high-fidelity wireframes, animations, and interactions.",
  },
  {
    aosDuration: "3000",
    title: "Launch",
    description:
      "In this stage, we develop a launch communication plan, defining key messages tailored to your audience. Brand guidelines will be established to ensure consistency and long-term brand integrity.",
  },
];
---

<section>
  <Wrapper variant="standard" class="pt-24 pb-12">
    <div class="max-w-xl overflow-hidden">
      <Text
        tag="h3"
        variant="textXL"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="dark:text-white text-base-900 text-balance"
      >
        I build meaningful relationships by aligning my work with my clients'
        values and goals.
      </Text>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-1 pt-4 relative before:absolute after:absolute before:bg-black after:bg-base-200 dark:before:bg-neutral-50 dark:after:bg-neutral-50/10 before:top-0 before:left-0 before:h-px before:w-18 after:top-0 after:right-0 after:left-20 after:h-px"
    >
      {
        processs.map((process, index) => (
          <div class="flex gap-2 relative overflow-hidden pb-12">
            <span
              class="text-9xl font-semibold right-0 text-base-100 dark:text-base-800 lg:text-15xl absolute"
              data-aos="fade-left"
              data-aos-duration={process.aosDuration}
            >
              {index + 1}
            </span>
            <div class="relative">
              <Text
                tag="h4"
                variant="textBase"
                class="dark:text-white text-base-900 font-medium"
              >
                {process.title}
              </Text>
              <Text
                tag="h4"
                variant="textSM"
                class="dark:text-base-400 mt-4 text-base-500 text-balance lg:text-balance"
              >
                {process.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
